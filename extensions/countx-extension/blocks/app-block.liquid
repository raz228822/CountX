<!-- Countdown widget -->
<div class="countdown-widget">
  <div class="countdown-text">Countdown text</div>
  <div class="countdown-display"></div>
  <div id="loader" style="display: none;">Loading...</div>
</div>

{% schema %}
{
  "name": "Countdown Widget",
  "target": "section",
  "stylesheet": "countdown.css",
  "javascript": "countdown.js",
  "settings": []
}
{% endschema %}

{{ 'countdown.css' | asset_url | stylesheet_tag }}
<script src="{{ 'countdown.js' | asset_url }}" defer></script>
